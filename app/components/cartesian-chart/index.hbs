<svg
  role='group'
  class='bar-chart bar-chart--deck'
  {{did-insert this.onInsert}}
  {{did-update this.animateData @data}}
>
  <title>{{@title}}</title>
  <g
    aria-hidden='true'
    class='y-axis'
    transform='translate({{this.yAxisWidth}}, 0)'
  >
    <text>{{@yLabel}}</text>
  </g>
  <g class='gridlines' transform='translate({{this.yAxisWidth}}, 0)'></g>
  <g class='canvas'>
    {{yield
      (hash
        Bars=(component
          'cartesian-chart/bars'
          data=this.data
          xScale=this.xScale
          yScale=this.yScale
        )
        Marimekko=(component
          'cartesian-chart/marimekko'
          data=this.data
          xScale=this.xScaleLinear
          yScale=this.yScale
        )
      )
    }}
  </g>
  <g
    aria-hidden='true'
    class='x-axis'
    transform='translate(0, {{this.xAxisOffset}})'
  ></g>
</svg>
